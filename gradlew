##############################################################################
#
# Gradle start up script for POSIX generated by Gradle.
#
# Optional ENV vars:
# ------------------
# GRADLE_OPTS - JVM options for Gradle, e.g. "-XX:MaxMetaspaceSize=256m"
# GRADLE_HOME - location of a Gradle installation
# GRADLE_USER_HOME - location of gradle user directory defaults to ~/.gradle
# JAVA_HOME - location of a JDK home dir
#

# Attempt to set APP_HOME

# Resolve links: $0 may be a link
app_path=$0

# Need this for daisy-chained symlinks.
while
    APP_HOME=$(dirname "$0")
    [ -h "$app_path" ]
do
    ls=$(ls -ld "$app_path")
    link=$(expr "$ls" : '.*-> \(.*\)$')
    case $link in             #(
      /*)   app_path="$link" ;; #(
      *)    app_path="$APP_HOME/$link" ;;
    esac
done

# Change from hard link to canonical path.
APP_HOME=$(cd "$APP_HOME" && pwd -P)

# Call the command
exec java \
    -Xmx64m -Xms64m \
    -Dorg.gradle.appname="gradlew" \
    -classpath "$APP_HOME/gradle/wrapper/gradle-wrapper.jar" \
    org.gradle.wrapper.GradleWrapperMain \
    "$@"